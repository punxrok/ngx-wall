{
  "name": "ngx-wall",
  "version": "1.1.11",
  "description": "Wall web based editor",
  "main": "./dist/wall.umd.js",
  "jsnext:main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "keywords": [
    "angular"
  ],
  "scripts": {
    "build": "webpack --config=./configurations/webpack-library.config.js && ngc && tsc --emitDeclarationOnly --declaration && cpx \"lib/resources/**/*\" \"dist\"",
    "build:watch": " concurrently \"tsc -w --emitDeclarationOnly --declaration\" \"webpack --watch --config=./configurations/webpack-library.config.js\" \"cpx lib/resources/**/* dist -w\"",
    "application": "webpack-dev-server --config=./configurations/webpack-dev-application.config.js",
    "gh": "webpack --config=./configurations/webpack-dev-application.config.js",
    "lint": "tslint -c tslint.json './lib/**/*.ts'",
    "test": "karma start ./configurations/karma.conf.js",
    "test:once": "karma start configurations/karma.conf.js --single-run",
    "explorer": "source-map-explorer ./dist/wall.umd.js",
    "release": "npm run lint && npm run test:once && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vm-mishchenko/wall.git"
  },
  "author": "Vitalii Mishchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vm-mishchenko/wall/issues"
  },
  "homepage": "https://github.com/vm-mishchenko/wall#readme",
  "peerDependencies": {
    "@angular/forms": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/common": "^6.0.0",
    "rxjs": "^6.0.0",
    "bootstrap": "4.0.0",
    "@ng-bootstrap/ng-bootstrap": "2.0.0",
    "open-iconic": "1.1.1",
    "codemirror": "5.37.0"
  },
  "devDependencies": {
    "@angular/router": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@types/jasmine": "2.5.53",
    "@types/node": "^8.0.53",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "3.4.0",
    "bootstrap": "4.0.0",
    "@ng-bootstrap/ng-bootstrap": "2.0.0",
    "open-iconic": "1.1.1",
    "codelyzer": "4.0.1",
    "core-js": "2.5.1",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "2.30.1",
    "jasmine-core": "2.7.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-webpack": "2.0.4",
    "lodash": "4.17.4",
    "node-sass": "4.5.3",
    "raw-loader": "0.5.1",
    "file-loader": "0.5.1",
    "rxjs": "^6.0.0",
    "sass-loader": "6.0.6",
    "source-map-explorer": "1.5.0",
    "style-loader": "0.19.0",
    "to-string-loader": "1.1.5",
    "tslint": "5.8.0",
    "typescript": "2.7.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.10.1",
    "zone.js": "0.8.20",
    "concurrently": "3.5.1",
    "cpx": "1.5.0",
    "codemirror": "5.37.0"
  }
}
