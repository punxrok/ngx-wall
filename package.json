{
  "name": "wall",
  "version": "1.0.0",
  "description": "Wall web based editor",
  "main": "./dist/wall.umd.js",
  "module": "./dist/index.js",
  "jsnext:main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "keywords": [
    "angular"
  ],
  "scripts": {
    "explorer": "source-map-explorer ./dist/wall.umd.js",
    "build:umd:watch": "webpack --watch --config=./configurations/webpack-library.config.js",
    "dev:server": "webpack-dev-server --config=./configurations/webpack-dev-application.config.js",
    "lint": "tslint -c tslint.json lib/**/*.ts",
    "build:umd": "webpack --config=./configurations/webpack-library.config.js",
    "build:esm": "gulp --gulpfile ./configurations/gulpfile.js inline-templates && tsc --project tsconfig-esm.json",
    "build": "npm run build:umd && npm run build:esm && ngc",
    "test": "karma start ./configurations/karma.conf.js",
    "test:once": "karma start configurations/karma.conf.js --single-run",
    "release": "npm run lint && npm run test:once && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vm-mishchenko/wall.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vm-mishchenko/wall/issues"
  },
  "homepage": "https://github.com/vm-mishchenko/wall#readme",
  "peerDependencies": {
    "@angular/core": "^4.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@angular/common": "4.3.4",
    "@angular/compiler": "4.3.4",
    "@angular/compiler-cli": "4.3.4",
    "@angular/core": "4.3.4",
    "@angular/platform-browser": "4.3.4",
    "@angular/platform-browser-dynamic": "4.3.4",
    "@ngtools/webpack": "^1.6.0",
    "@types/jasmine": "2.5.53",
    "@types/node": "^8.0.24",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "3.2.3",
    "bootstrap": "4.0.0-beta",
    "codelyzer": "3.1.2",
    "core-js": "^2.5.0",
    "css-loader": "0.28.5",
    "gulp": "3.9.1",
    "gulp-inline-ng2-template": "4.0.0",
    "html-webpack-plugin": "2.30.1",
    "jasmine-core": "2.7.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-webpack": "2.0.4",
    "lodash": "4.17.4",
    "node-sass": "4.5.3",
    "raw-loader": "^0.5.1",
    "rxjs": "^5.3.0",
    "sass-loader": "6.0.6",
    "source-map-explorer": "1.4.0",
    "style-loader": "^0.18.2",
    "to-string-loader": "1.1.5",
    "tslint": "5.6.0",
    "typescript": "2.4.2",
    "webpack": "3.5.3",
    "webpack-dev-server": "2.7.1",
    "zone.js": "^0.8.4",
    "extract-text-webpack-plugin": "3.0.0"
  }
}
